@model Projeto.Models.Usuario

<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <form asp-action="Edit">

        <div class="modal-header">
            <div style="margin-right: 5em;">
                <button type="submit" style="background-color:white; border: none;">
                    <i class="fa fa-save fa-4x" style="color: #17A2B8;" aria-hidden="true"></i>
                </button>
            </div>
        </div>

        <div class="modal-body">
          
              <div class="form-horizontal">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                  <input type="hidden" asp-for="Id" />

                  <div class="form-group row">
                      <label class="col-md-2 control-label">Nome</label>
                      <div class="col-md-10">
                          <input type="Text" asp-for="UserName" class="form-control" />
                      </div>
                  </div>

                  <div class="form-group row">
                      <label class="col-md-2 control-label">Email</label>
                      <div class="col-md-10">
                          <input type="Text" asp-for="Email" class="form-control" />
                      </div>
                  </div>             


                  <div class="form-group row">
                      <label class="col-md-2 control-label">Situação</label>
                      <div class="col-md-10">
                          <select asp-for="Status" class="form-control">
                            <option value="Ativo">Ativo</option>
                            <option value="Inativo">Inativo</option>
                          </select>
                      </div>
                  </div>              
                  

              </div>
          

          @section Scripts {
              @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
          }

          </div>
       <div class="modal-footer">
            <button type="button" data-dismiss="modal"  style="background-color:white; border: none;">
              <i class="fa fa-window-close-o fa-4x" aria-hidden="true"></i>
            </button>
        </div>

        </form>
    </div>
  </div>
</div>