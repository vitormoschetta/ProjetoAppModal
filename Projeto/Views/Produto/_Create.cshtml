@model Projeto.Models.Produto

<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Novo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form asp-action="Create">
            <div class="form-horizontal">      

                <div class="form-group row">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-10">
                        <input type="Text" asp-for="Nome"  class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 control-label">Preco</label>
                    <div class="col-md-10">
                        <input type="Text" asp-for="Preco"  class="form-control" />
                    </div>
                </div>
               
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Concluir" class="btn btn-info" />
                    </div>
                </div>

            </div>
        </form>

        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>